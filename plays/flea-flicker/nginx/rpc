   # ── upstream backends ──────────────────────────────────────────────────────
    upstream rpc_backend {
        server 127.0.0.1:${RPC_PORT};
    }
    upstream ws_backend {
        ip_hash;
        server 127.0.0.1:${RPC_PORT};
    }

    # ── RPC — HTTP proxy (TLS terminated by Akash provider ingress) ────────────
    # The Akash provider's nginx-ingress handles TLS termination for port 443
    # with the `accept:` domain routing rule. Traffic arriving at this nginx
    # instance is already plain HTTP — do NOT add `ssl` here or nginx will
    # return HTTP 400 when it receives cleartext from the provider.
    server {
        listen 443;
        server_name ${RPC_DOMAIN};

        # WebSocket (/websocket endpoint)
        location /websocket {
            proxy_pass         http://ws_backend/websocket;
            proxy_http_version 1.1;
            proxy_set_header   Upgrade    $http_upgrade;
            proxy_set_header   Connection "upgrade";
            proxy_set_header   Host       $host;
            proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # JSON-RPC
        location / {
            add_header Access-Control-Allow-Origin  *;
            add_header Access-Control-Max-Age       3600;
            add_header Access-Control-Expose-Headers Content-Length;
            add_header Referrer-Policy              origin;

            proxy_pass         http://rpc_backend;
            proxy_http_version 1.1;
            proxy_set_header   Host              $host;
            proxy_set_header   X-Real-IP         $remote_addr;
            proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
            proxy_set_header   X-Forwarded-Proto $scheme;
            proxy_set_header   X-NginX-Proxy     true;
            proxy_set_header   Upgrade           $http_upgrade;
            proxy_set_header   Connection        "upgrade";
        }
    }
user  nginx;
worker_processes  auto;

events {
    worker_connections 1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;
    keepalive_timeout  65;

    # --- Service Includes (auto-managed) ---
    # include /etc/nginx/conf.d/api.conf;        # PORT:API_PORT
    # include /etc/nginx/conf.d/grpc.conf;        # PORT:GRPC_PORT
    # include /etc/nginx/conf.d/rpc.conf;        # PORT:RPC_PORT
}

stream {
    include /etc/nginx/conf.d/peer.conf;  # always included
}
upstream api_backend {
    server 127.0.0.1:${API_PORT};
}

# ── REST API — HTTP proxy (TLS terminated by Akash provider ingress) ───────
# The Akash provider's nginx-ingress handles TLS termination for port 443
# with the `accept:` domain routing rule. Traffic arriving here is plain HTTP.
server {
    listen 443;
    server_name ${API_DOMAIN};

    location / {
        add_header Access-Control-Allow-Origin   *;
        add_header Access-Control-Allow-Methods  *;
        add_header Access-Control-Max-Age        3600;
        add_header Access-Control-Expose-Headers Content-Length;
        add_header Referrer-Policy               origin;

        proxy_pass         http://api_backend;
        proxy_set_header   Host              $http_host;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
    }
}